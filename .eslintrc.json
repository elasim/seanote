{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"quotes": ["error", "single"],
		"semi": ["error",	"always"],
		"comma-dangle": 0,
		"no-console": 1,
		"no-constant-condition": 1,
		"no-unused-vars": 1,
		"keyword-spacing": 2,
		"no-undef": 2,
		"no-unreachable": 2,
		"no-trailing-spaces": [1, {
			"skipBlankLines": true
		}],
		"react/jsx-uses-react": 2,
		"react/jsx-uses-vars": 2,
		"react/jsx-no-undef": 2
	}
}